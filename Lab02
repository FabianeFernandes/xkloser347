

#include <iostream>
#include <cstring>

using namespace std;


//Function prototypes:
void inputStrings(char *string1, char *string2, const int size);
char* stringAdd(char *dest, const char *src);
int stringCompare (const char *firstWord, const char *secondWord);




int main() {
    
    // C-string arrays for user input
    const int LENGTH = 20;
    char str1[LENGTH], str2[LENGTH];

    int choice; // To hold the menu choice

    // To display the menu and get a choice
    cout << "Enter the number that corresponds to the string manipulation to be performed:\n\n"
    << "    1. String lenght.\n"
    << "    2. String copy\n"
    << "    3. String concatenation\n"
    << "    4. String comparison.\n\n";
    
    char again = 'y';
    
    //To give user the possibility to repeat the menu
    do
    {
    cout << "Enter your choice and press [ENTER]: " << endl;
    cin >> choice;
    cin.clear();
        cin.ignore();


    while ((choice <1) || (choice >=5))         //To validate user menu choice
    {
        cout <<  choice << " is not a choice in this menu\n"
        << "Please, enter an option from 1 to 4.\n";
        cin >> choice;
    }
     
   
    
    // To execute the menu choice
    switch (choice)
    
    {
        case 1: cout << "Coming soon!";
            break;
            
        case 2: cout << "Coming soon!";
            break;
            
        case 3:
            inputStrings(str1, str2, LENGTH);
            stringAdd(str1, str2);
            cout << " Cocatenated: " << str1 << endl;
            break;
            
        case 4:
            inputStrings(str1, str2, LENGTH);
            int comp = stringCompare (str1, str2);
            if (comp == 0)
                cout << "You inputed identical words.";
            
            else if (comp > 0)
                cout << "The words are different: '" <<str2 << "' comes before '" << str1 << "' alphabetically\n";
            
            else
            cout << "The words are different: '" <<str1 << "' comes before '" << str2 << "' alphabetically\n";
            break;
    
    }
        
    cout << "Manipulate another string? [Y/N]";
    cin >> again;
    cin.clear();
        
    } while (again == 'y' || again == 'Y');
    
    return 0;
    
}

//User input for 2 strings
void inputStrings(char *string1, char *string2, const int size)
{
    cout << "Enter the first string: " << endl;
    cin.getline(string1, size);
    cin.clear();
    cout << "Enter the second string: " << endl;
    cin.getline(string2, size);
    cin.clear();
}



//stringAdd function:
//Duplicates string concatenation (strcat) function
char* stringAdd(char *firstWord, const char *secondWord)
{
    while (*firstWord!= '\0')
        firstWord++;
    
    while (*secondWord != '\0')
        *firstWord++ = *secondWord++;
    
    return firstWord;

}


//stringCompare function that mimics the functionality of strcmp function

int  stringCompare (const char *firstWord, const char *secondWord)
{
    while( (*firstWord!='\0') && (*firstWord==*secondWord) ){
        firstWord++;
        secondWord++;
    }
    
    if ((*firstWord - *secondWord) > 0)
        return 1;
    
    else if ((*firstWord - *secondWord) == 0)
        return 0;
    
    else
        return -1;
    
}
